<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F0F0F5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="@drawable/background_view_rounded_single"
            android:orientation="vertical"
            android:visibility="visible">

            <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                tools:context="com.runloop.www.runloop.PlanRunActivity" />-->

            <Button
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:text="Google map should be here, but could not get the key. *Does google mappy thing*" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Run Length"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seek1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:progress="20"
                    android:secondaryProgress="20" />

                <SeekBar
                    android:id="@+id/distance_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:min="1"
                    android:max="10"
                    android:progress="1"
                    android:progressDrawable="@drawable/progressbar"
                    android:secondaryProgress="0" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>